<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/priceTicket"
            android:layout_width="219dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/designview"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Data"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ticket_data" />

        <TextView
            android:id="@+id/ticket_name"
            android:layout_width="219dp"
            android:layout_height="49dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/designview"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textticket" />

        <TextView
            android:id="@+id/ticket_data"
            android:layout_width="219dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/designview"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Data"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ticket_name" />

        <TextView
            android:id="@+id/textticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:text="Ваш Билет"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberticket"
            android:layout_width="265dp"
            android:layout_height="26dp"
            android:layout_marginBottom="56dp"
            android:text="Order"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>